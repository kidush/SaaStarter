<%
   content_for(:page_title, "Motivi cancellazione - #{@cancellation_reason}")
   content_for(:page_heading, 'Cancellation Reason')
%>

<div class="row">
  <div class="col s12 m2 l2">
    <div class="collection z-depth-1">
      <%= link_to 'Categorie', admin_cancellation_categories_path, class: 'collection-item' %>
      <%= link_to 'Categoria', admin_cancellation_category_path(@cancellation_category), class: 'collection-item' %>
      <%= link_to 'Motivi', admin_cancellation_category_cancellation_reasons_path(@cancellation_category), class: 'collection-item' %>
      <%= link_to 'Motivo', admin_cancellation_category_cancellation_reason_path(@cancellation_category, @cancellation_reason), class: 'collection-item active' %>
    </div>
  </div>

  <div class="col s12 m10 l10 right-align">
    <% if can? :edit, @cancellation_reason %><%= link_to 'Modifica motivo cancellazione', edit_admin_cancellation_category_cancellation_reason_path(@cancellation_category, @cancellation_reason), class: 'btn btn-large yellow' %>
    <% end %>
  </div>

  <div class="col s12 m10 l10">
    <div class="card-panel teal">
      <p>Nome:<strong class="right"><%= @cancellation_reason.name %></strong></p>
      <p>Attivo:<strong class="right"><%= @cancellation_reason.active %></strong></p>
      <p>Messaggio permesso:<strong class="right"><%= @cancellation_reason.allow_message %></strong></p>
      <p>Messaggio richiesto<strong class="right"><%= @cancellation_reason.require_message %></strong></p>
    </div>
  </div>
</div>
