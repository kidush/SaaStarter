<%
   content_for(:page_title, "Categoria di cancellazione - #{@cancellation_category}")
   content_for(:page_heading, 'Categoria di cancellazione')
%>

<div class="row">
  <div class="col s12 m2 l2">
    <div class="collection z-depth-1">
      <%= link_to 'Categorie', admin_cancellation_categories_path, class: 'collection-item' %>
      <%= link_to 'Categoria', admin_cancellation_category_path(@cancellation_category), class: 'collection-item active' %>
      <%= link_to 'Motivazioni', admin_cancellation_category_cancellation_reasons_path(@cancellation_category), class: 'collection-item' %>
    </div>
  </div>

  <div class="col s12 m10 l10">
    <div class="right">
      <% if can? :edit, @cancellation_category %><%= link_to 'Modifica categoria di cancellazione', edit_admin_cancellation_category_path(@cancellation_category), class: 'btn btn-large yellow' %>
      <% end %>
    </div>
  </div>

  <div class="col s12 m10 l10">
    <div class="card-panel teal">
      <p>Nome:<strong class="right"><%= @cancellation_category.name %></strong></p>
      <p>Attivo:<strong class="right"><%= @cancellation_category.active %></strong></p>
      <p>Messaggio permesso:<strong class="right"><%= @cancellation_category.allow_message %></strong></p>
      <p>Messaggio richiesto:<strong class="right"><%= @cancellation_category.require_message %></strong></p>
    </div>
  </div>
</div>